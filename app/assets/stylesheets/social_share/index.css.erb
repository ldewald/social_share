.social-share a {
  background-color: gray;
  border-radius: 2px;
  color: #FFF;
  display: inline-block;
  font-size: 21px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  width: 32px;
}

.social-share a:hover, .social-share a:active, .social-share a:visited, .social-share a:focus {
  color: #FFF;
  text-decoration: none;
}

.social-share a:not(:last-child) {
  margin-right: 5px;
}

.social-share a.ss-facebook-share-button {
  background: #3B5999;
}

.social-share a.ss-facebook-share-button:hover {
  background: #224080;
}

.social-share a.ss-twitter-share-button {
  background: #55ACEE;
}

.social-share a.ss-twitter-share-button:hover {
  background: #3C93D5;
}

.social-share a.ss-google-plus-share-button {
  background: #DD4B39;
}

.social-share a.ss-google-plus-share-button:hover {
  background: #C43220;
}

.social-share a.ss-pinterest-share-button {
  background: #C92228;
}

.social-share a.ss-pinterest-share-button:hover {
  background: #B0090F;
}

/* FONTS */

@font-face {
  font-family: 'social_share';
  src: url('<%= font_path('social_share.eot') %>');
}

@font-face {
  font-family: 'social_share';
  src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype'),
       url(data:application/font-woff;charset=utf-8;base64,) format('woff');
  font-weight: normal;
  font-style: normal;
}

[class^="ss-icon-"], [class*=" ss-icon-"] {
  font-family: 'social_share';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.ss-icon-twitter:before {
  content: "\f099";
}

.ss-icon-facebook:before {
  content: "\f09a";
}

.ss-icon-pinterest:before {
  content: "\e600";
}

.ss-icon-google-plus:before {
  content: "\e601";
}
