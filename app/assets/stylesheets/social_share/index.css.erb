/* BUTTONS */

.social-share a {
  background-color: gray;
  border-radius: 2px;
  color: #FFF;
  display: inline-block;
  font-size: 14px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  vertical-align: middle;
  width: 20px;
}

.social-share a span {
  line-height: 20px;
}

.social-share a:hover, .social-share a:active, .social-share a:visited, .social-share a:focus {
  color: #FFF;
  text-decoration: none;
}

.social-share a:not(:last-child) {
  margin-right: 5px;
}

.social-share a.ss-email-share-button {
  background: #5BB119;
}

.social-share a.ss-email-share-button:hover {
  background: #429800;
}

.social-share a.ss-facebook-share-button {
  background: #3B5999;
}

.social-share a.ss-facebook-share-button:hover {
  background: #224080;
}

.social-share a.ss-google-plus-share-button {
  background: #DD4B39;
}

.social-share a.ss-google-plus-share-button:hover {
  background: #C43220;
}

.social-share a.ss-pinterest-share-button {
  background: #C92228;
}

.social-share a.ss-pinterest-share-button:hover {
  background: #B0090F;
}

.social-share a.ss-reddit-share-button {
  background: #5F99CF;
}

.social-share a.ss-reddit-share-button:hover {
  background: #4680B6;
}

.social-share a.ss-stumbleupon-share-button {
  background: #EB4924;
}

.social-share a.ss-stumbleupon-share-button:hover {
  background: #D2300B;
}

.social-share a.ss-twitter-share-button {
  background: #55ACEE;
}

.social-share a.ss-twitter-share-button:hover {
  background: #3C93D5;
}

.social-share a.ss-tumblr-share-button {
  background: #35465C;
}

.social-share a.ss-tumblr-share-button:hover {
  background: #1C2D43;
}

/* MORE SERVICES */

.social-share .social-share-more {
  display: inline-block;
  position: relative;
  vertical-align: middle;
}

.social-share .social-share-more .ss-more-button {
  margin-right: 0;
}

.social-share .social-share-more .ss-more-buttons {
  background: #FFF;
  border: 1px solid #A8A8A8;
  border-radius: 2px;
  display: none;
  padding: 5px 10px 10px 10px;
  position: absolute;
  right: 0px;
  top: 20px;
  width: 142px;
  z-index: 1000;
}

.social-share .social-share-more .ss-more-buttons a {
  margin-top: 5px;
}

.social-share .social-share-more .ss-more-buttons a:nth-child(5n+5) {
  margin-right: 0;
}

/* FONTS */

@font-face {
  font-family: 'social_share';
  src:url("<%= font_path('social_share.eot') %>");
  src:url("<%= font_path('social_share.eot#iefix') %>") format('embedded-opentype'),
      url("<%= font_path('social_share.ttf') %>") format('truetype'),
      url("<%= font_path('social_share.woff') %>") format('woff'),
      url("<%= font_path('social_share.svg#social_share') %>") format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="ss-icon-"], [class*=" ss-icon-"] {
  font-family: 'social_share';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.ss-icon-google-plus:before {
  content: "\e500";
}
